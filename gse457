library(GEOquery)
library(limma)


gse <- getGEO("GSE55457", GSEMatrix = TRUE, AnnotGPL = TRUE)
gse_data <- gse[[1]]
exprs_data <- exprs(gse_data)
#View(exprs_data)
pheno_data <- pData(gse_data)
feature_data <- fData(gse_data)

# Clean up condition column
pheno_data$`clinical status:ch1` <- trimws(pheno_data$`clinical status:ch1`)

# Now try again
osteo_samples <- rownames(pheno_data[pheno_data$`clinical status:ch1` == "osteoarthritis", ])

# Remove from phenotype data
pheno_data_filtered <- pheno_data[!(rownames(pheno_data) %in% osteo_samples), ]

# Remove from expression matrix
exprs_data_filtered <- exprs_data[, !(colnames(exprs_data) %in% osteo_samples)]


write.csv(exprs_data_filtered, "~/Downloads/Desktop/omics_project/week1/GSE55457/datasets/GSE55457_expression_matrix.csv")
write.csv(pheno_data_filtered, "~/Downloads/Desktop/omics_project/week1/GSE55457/datasets/GSE55457_sample_metadata.csv")
write.csv(feature_data, "~/Downloads/Desktop/omics_project/week1/GSE55457/datasets/GSE55457_probe_annotation.csv")


# Remove probes with too many NAs or zero variance
exprs_data_filtered <- exprs_data_filtered[complete.cases(exprs_data), ]
exprs_data_filtered <- exprs_data_filtered[apply(exprs_data, 1, var) > 0.01, ]  # change threshold as needed
# Filter out low expression probes (e.g., below 25th percentile)

exprs_data_filtered <- log2(exprs_data_filtered + 1)

threshold <- quantile(rowMeans(exprs_data_filtered), 0.25)
exprs_data_filtered <- exprs_data_filtered[rowMeans(exprs_data_filtered) > threshold, ]



# Ensure annotation includes gene symbols
feature_data <- fData(gse_data)
head(feature_data$`Gene symbol`)  # Confirm it has gene symbols

# Combine expression data and annotation
exprs_annotated <- data.frame(probe_id = rownames(exprs_data_filtered),
                              exprs_data_filtered,
                              stringsAsFactors = FALSE)

# Add gene symbols
exprs_annotated$gene_symbol <- feature_data[rownames(exprs_data_filtered), "Gene symbol"]
exprs_annotated$gene_symbol <- sapply(strsplit(exprs_annotated$gene_symbol, "///", fixed = TRUE), `[`, 1)

write.csv(exprs_annotated, "~/Downloads/Desktop/omics_project/week1/GSE55457/datasets/GSE55457_Exprs_annotated.csv")


male_samples <- pheno_data_filtered$`gender:ch1` == "male"
exprs_male <- exprs_annotated[, male_samples]
pheno_male <- pheno_data_filtered[male_samples, ]

exprs_male_matrix <- exprs_male[, !(colnames(exprs_male) %in% c("probe_id", "gene_symbol"))]



# Define groups
group_male <- factor(pheno_male$`clinical status:ch1`)
design_male <- model.matrix(~ 0 + group_male)
colnames(design_male) <- make.names(colnames(design_male))
contrast.matrix <- makeContrasts(RA_vs_Control = group_malerheumatoid.arthritis - group_malenormal.control , levels = design_male)

fit <- lmFit(exprs_male_matrix, design_male)
fit2 <- contrasts.fit(fit, contrast.matrix)
fit2 <- eBayes(fit2)

# Get results
results <- topTable(fit2, adjust = "fdr", number = Inf)

results$probe_id <- rownames(results)
results_annotated <- merge(results, exprs_annotated[, c("probe_id", "gene_symbol")], by = "probe_id", all.x = TRUE)


significant_DEGs <- results_annotated[results_annotated$adj.P.Val < 0 & abs(results_annotated$logFC) > 0.05, ]
# Save to CSV
write.csv(results_annotated, "~/Downloads/Desktop/omics_project/week1/GSE55457/results_as_csv_457/OVERALL_457_MALE.csv", row.names = FALSE)
